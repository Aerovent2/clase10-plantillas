<h1>View Productos</h1>
<% if(productos.length){ %> 
    <table  border="1" align="center">
        <thead>
            <tr>
                <th>Titilo</th>
                <th>Precio</th>
                <th>Miniatura</th>
            </tr>
        </thead>
        <% productos.forEach(producto => { %>
            <tr> 
                <td><%= producto.title %></td>
                <td><%= producto.price %></td>
                <td><img  src="<%=producto.thumbnail%>" alt="imagen"/></td>
            </tr>
        <% }) %>
    </table>
    <% } else { %>
        <p>No hay productos cargados</p>
    <% } %> 

<a href="/">Cargar Productos</a>